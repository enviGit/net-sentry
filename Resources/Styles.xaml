<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="DeepSpaceColor">#0f172a</Color>
    <Color x:Key="PanelColor">#1e293b</Color>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource DeepSpaceColor}"/>
    <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}" Opacity="0.8"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#f8fafc"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#94a3b8"/>
    <FontFamily x:Key="TechFont">Consolas</FontFamily>

    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource TechFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="Indicator" 
                                Grid.Column="0" 
                                Background="{TemplateBinding BorderBrush}" 
                                Opacity="0.3"
                                CornerRadius="2"/>

                        <Border x:Name="Body" 
                                Grid.Column="1" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="0,4,4,0"
                                Margin="4,0,0,0">
                            <ContentPresenter HorizontalAlignment="Left" 
                                              VerticalAlignment="Center" 
                                              Margin="15,0,0,0"/>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Indicator" Property="Opacity" Value="1.0"/>
                            <Setter TargetName="Indicator" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=BorderBrush.Color}" BlurRadius="10" ShadowDepth="0"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="Body" Property="Background" Value="#2A3749"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Body" Property="Background" Value="#334155"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TechPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
        <Setter Property="BorderBrush" Value="#334155"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>