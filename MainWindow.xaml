<Window x:Class="NetSentry_Dashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:vm="clr-namespace:NetSentry_Dashboard.ViewModels"
        mc:Ignorable="d"
        Title="NetSentry" Height="650" Width="1100"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="{StaticResource TechFont}">

    <Border Background="{StaticResource BackgroundBrush}" 
            BorderThickness="1" CornerRadius="8" ClipToBounds="True">

        <Border.BorderBrush>
            <SolidColorBrush Color="{Binding StatusColor.Color}" Opacity="0.5"/>
        </Border.BorderBrush>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" MouseLeftButtonDown="Border_MouseDown">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1e293b" Offset="0.0"/>
                        <GradientStop Color="#0f172a" Offset="1.0"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="NET" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="_SENTRY" Foreground="{Binding StatusColor}" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text=" // DASHBOARD" Foreground="{StaticResource TextSecondaryBrush}" FontSize="16" Opacity="0.5"/>
                </StackPanel>

                <Border Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" 
                        BorderBrush="{Binding StatusColor}" BorderThickness="1" CornerRadius="4" Padding="10,2" Margin="0,0,20,0"
                        Background="#20000000">
                    <TextBlock Text="{Binding SystemStatus}" 
                               Foreground="{Binding StatusColor}" 
                               FontSize="12" FontWeight="SemiBold"/>
                </Border>

                <Button Content="✕" Grid.Column="2" Click="Button_Close_Click"
                        Width="45" Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}" 
                        BorderThickness="0" Cursor="Hand" FontSize="16"/>
            </Grid>

            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="MODULES" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,10" Opacity="0.5"/>

                    <Button Content="SCAN NETWORK" 
                            Style="{StaticResource NavButtonStyle}" 
                            BorderBrush="{Binding StatusColor}"
                            Command="{Binding ScanNetworkCommand}"/>

                    <Button Content="PROCESS AUDIT" 
                            Style="{StaticResource NavButtonStyle}" 
                            BorderBrush="{Binding StatusColor}"
                            Command="{Binding AnalyzeProcessesCommand}"/>

                    <Button Content="SYSTEM REPAIR" 
                            Style="{StaticResource NavButtonStyle}" 
                            BorderBrush="{Binding StatusColor}"
                            Command="{Binding RepairSystemCountersCommand}"/>

                    <Border Height="1" Background="#334155" Margin="0,20,0,20"/>

                    <TextBlock Text="METRICS" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,10" Opacity="0.5"/>

                    <StackPanel Margin="5">
                        <TextBlock Text="MEMORY LOAD:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Opacity="0.5"/>
                        <Grid Margin="0,2,0,10">
                            <Border Height="4" Background="#334155" CornerRadius="2" VerticalAlignment="Center"/>
                            <ProgressBar Value="{Binding RamUsage}" Maximum="100" Height="4" BorderThickness="0" Background="Transparent" Foreground="{Binding StatusColor}">
                                <ProgressBar.Style>
                                    <Style TargetType="ProgressBar">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ProgressBar">
                                                    <Grid>
                                                        <Border Background="Transparent"/>
                                                        <Border x:Name="PART_Indicator" HorizontalAlignment="Left" Background="{TemplateBinding Foreground}" CornerRadius="2"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ProgressBar.Style>
                            </ProgressBar>
                            <TextBlock Text="{Binding RamUsage, StringFormat={}{0:0}%}" 
                                       Foreground="{Binding StatusColor}" 
                                       FontSize="10" 
                                       HorizontalAlignment="Right" 
                                       Margin="0,-15,0,0"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="THREADS:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                            <TextBlock Text="{Binding ThreadCount}" Foreground="{StaticResource TextPrimaryBrush}" FontSize="12" Margin="5,0,0,0" FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="UPTIME:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                            <TextBlock Text="{Binding Uptime}" Foreground="{StaticResource TextPrimaryBrush}" FontSize="12" Margin="10,0,0,0" FontFamily="Consolas"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Style="{StaticResource TechPanelStyle}" Margin="0,0,0,15">
                        <Grid>
                            <TextBlock Text="{Binding ChartTitle}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,10,0,0" Opacity="0.5"/>

                            <Button Content="[ SWITCH VIEW ]" 
        Command="{Binding ToggleChartModeCommand}"
        Style="{StaticResource SubActionButtonStyle}"
        VerticalAlignment="Top" HorizontalAlignment="Right"
        Margin="0,8,10,0"
        Foreground="{Binding StatusColor}"
        Opacity="0.8"/>

                            <lvc:CartesianChart Series="{Binding Series}" 
                                                Hoverable="False" 
                                                DataTooltip="{x:Null}" 
                                                Margin="10,30,10,40" 
                                                AnimationsSpeed="0:0:0.15">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis ShowLabels="False" IsEnabled="False"/>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis ShowLabels="False" IsEnabled="False" MinValue="0" MaxValue="100"/>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">

                                <Viewbox MaxWidth="400" Height="60">
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="2" Opacity="0.5"/>
                                        </StackPanel.Effect>

                                        <TextBlock Text="{Binding PrimaryDisplayValue}" 
                                                   Foreground="{Binding StatusColor}" 
                                                   FontWeight="Light"/>

                                        <StackPanel Orientation="Horizontal" Visibility="{Binding DualModeVisibility}">

                                            <TextBlock Text=" | " 
                                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                                       Opacity="0.5" 
                                                       FontWeight="Light"/>

                                            <TextBlock Text="{Binding SecondaryDisplayValue}" 
                                                       Foreground="#d946ef" 
                                                       FontWeight="Light"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Viewbox>

                                <TextBlock Text="{Binding MainValueLabel}" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           Opacity="0.6" HorizontalAlignment="Center" FontSize="12" Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="15,0,0,10" Orientation="Horizontal" Opacity="0.8">

                                <StackPanel Orientation="Horizontal" Visibility="{Binding CpuLegendVisibility}" Margin="0,0,15,0">
                                    <Rectangle Width="8" Height="8" Fill="{Binding StatusColor}" Margin="0,0,5,0" RadiusX="2" RadiusY="2"/>
                                    <TextBlock Text="CPU" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Visibility="{Binding RamLegendVisibility}">
                                    <Rectangle Width="8" Height="8" Fill="#d946ef" Margin="0,0,5,0" RadiusX="2" RadiusY="2"/>
                                    <TextBlock Text="RAM" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" FontWeight="Bold"/>
                                </StackPanel>

                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" Style="{StaticResource TechPanelStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="10,5">
                                <TextBlock Text="SYSTEM_EVENT_LOGS" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           FontSize="10" 
                                           VerticalAlignment="Center" Opacity="0.5"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="[ COPY ]" 
            Style="{StaticResource SubActionButtonStyle}"
            Foreground="{Binding StatusColor}" 
            Command="{Binding CopyLogsCommand}"/>

                                    <Button Content="[ EXPORT .TXT ]" 
            Style="{StaticResource SubActionButtonStyle}"
            Foreground="{Binding StatusColor}" 
            Command="{Binding ExportLogsCommand}"/>
                                </StackPanel>
                            </Grid>

                            <TextBox Grid.Row="1" 
                                     Text="{Binding LogsText}"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     Style="{StaticResource CyberTextBoxStyle}"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     FontFamily="{StaticResource TechFont}"
                                     FontSize="12"
                                     Margin="10,0,5,10" 
                                     SelectionBrush="{Binding StatusColor}"
                                     SelectionOpacity="0.4">

                                <TextBox.Resources>
                                    <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource TechScrollBarStyle}"/>
                                    <Style TargetType="{x:Type TextBox}">
                                        <EventSetter Event="TextChanged" Handler="LogBox_TextChanged"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>
                    </Border>

                    <Border Grid.RowSpan="2" 
                            VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                            Margin="0,0,0,50"
                            Background="#CC000000" 
                            BorderBrush="{Binding StatusColor}" 
                            BorderThickness="1" 
                            CornerRadius="20"
                            Padding="20,10"
                            Visibility="{Binding ToastVisibility}">
                        <TextBlock Text="{Binding ToastMessage}" 
                                   Foreground="{Binding StatusColor}" 
                                   FontWeight="Bold" 
                                   FontSize="12"/>

                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>

                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>