<Window x:Class="NetSentry_Dashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:vm="clr-namespace:NetSentry_Dashboard.ViewModels"
        mc:Ignorable="d"
        Title="NetSentry" Height="650" Width="1100"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="{StaticResource TechFont}">

    <Border Background="{StaticResource BackgroundBrush}" 
            BorderThickness="1" CornerRadius="8" ClipToBounds="True">

        <Border.BorderBrush>
            <SolidColorBrush Color="{Binding StatusColor.Color, FallbackValue=#4ade80}" Opacity="0.5"/>
        </Border.BorderBrush>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" MouseLeftButtonDown="Border_MouseDown">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1e293b" Offset="0.0"/>
                        <GradientStop Color="#0f172a" Offset="1.0"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="NET" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="_SENTRY" Foreground="{Binding StatusColor}" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text=" // DASHBOARD" Foreground="{StaticResource TextSecondaryBrush}" FontSize="16" Opacity="0.5"/>
                </StackPanel>

                <Border Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" 
                        BorderBrush="{Binding StatusColor}" BorderThickness="1" CornerRadius="4" Padding="10,2" Margin="0,0,20,0"
                        Background="#20000000">
                    <TextBlock Text="{Binding SystemStatus}" 
                               Foreground="{Binding StatusColor}" 
                               FontSize="12" FontWeight="SemiBold"/>
                </Border>

                <Button Content="✕" Grid.Column="2" Click="Button_Close_Click"
                        Width="45" Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}" 
                        BorderThickness="0" Cursor="Hand" FontSize="16"/>
            </Grid>

            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="MODULES" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,10" Opacity="0.5"/>

                    <Button Content="SCAN NETWORK" 
                            Style="{StaticResource NavButtonStyle}" 
                            BorderBrush="{Binding StatusColor}"
                            Command="{Binding ScanNetworkCommand}"/>

                    <Button Content="PROCESS AUDIT" 
                            Style="{StaticResource NavButtonStyle}" 
                            BorderBrush="{Binding StatusColor}"
                            Command="{Binding AnalyzeProcessesCommand}"/>

                    <Button Content="SYSTEM REPAIR" 
                            Style="{StaticResource NavButtonStyle}" 
                            BorderBrush="{Binding StatusColor}"
                            Command="{Binding RepairSystemCountersCommand}"/>

                    <Border Height="1" Background="#334155" Margin="0,20,0,20"/>

                    <TextBlock Text="METRICS" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,10" Opacity="0.5"/>

                    <StackPanel Margin="5">
                        <TextBlock Text="THREADS: 24" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <TextBlock Text="UPTIME: 04:21:00" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Style="{StaticResource TechPanelStyle}" Margin="0,0,0,15">
                        <Grid>
                            <TextBlock Text="CPU_MONITORING_REALTIME" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,10,0,0" Opacity="0.5"/>
                            <lvc:CartesianChart Series="{Binding Series}" Hoverable="False" DataTooltip="{x:Null}" Margin="10,30,10,10" AnimationsSpeed="0:0:0.15">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis ShowLabels="False" IsEnabled="False"/>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis ShowLabels="False" IsEnabled="False" MinValue="0" MaxValue="100"/>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                <TextBlock Text="{Binding CpuUsage, StringFormat={}{0:0.0}%}" Foreground="{Binding StatusColor}" FontSize="56" FontWeight="Light" HorizontalAlignment="Center">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="2" Opacity="0.5"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="PROCESSOR LOAD" Foreground="{StaticResource TextSecondaryBrush}" Opacity="0.6" HorizontalAlignment="Center" FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" Style="{StaticResource TechPanelStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="10,5">
                                <TextBlock Text="SYSTEM_EVENT_LOGS" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           FontSize="10" 
                                           VerticalAlignment="Center" Opacity="0.5"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <StackPanel.Resources>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="FontSize" Value="10"/>
                                            <Setter Property="Margin" Value="5,0,0,0"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="2" Padding="5,2">
                                                            <ContentPresenter/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#334155"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </StackPanel.Resources>

                                    <Button Content="[ COPY ]" Command="{Binding CopyLogsCommand}"/>
                                    <Button Content="[ EXPORT .TXT ]" Command="{Binding ExportLogsCommand}"/>
                                </StackPanel>
                            </Grid>

                            <TextBox Grid.Row="1" 
                                     Text="{Binding LogsText}"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     Background="Transparent"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     BorderThickness="0"
                                     FontFamily="{StaticResource TechFont}"
                                     FontSize="12"
                                     Margin="10,0,5,10" 
                                     SelectionBrush="{Binding StatusColor}"
                                     SelectionOpacity="0.4">

                                <TextBox.Resources>
                                    <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource TechScrollBarStyle}"/>

                                    <Style TargetType="{x:Type TextBox}">
                                        <EventSetter Event="TextChanged" Handler="LogBox_TextChanged"/>
                                    </Style>
                                </TextBox.Resources>

                            </TextBox>
                        </Grid>
                    </Border>

                    <Border Grid.RowSpan="2" 
                            VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                            Margin="0,0,0,50"
                            Background="#CC000000" 
                            BorderBrush="{Binding StatusColor}" 
                            BorderThickness="1" 
                            CornerRadius="20"
                            Padding="20,10"
                            Visibility="{Binding ToastVisibility}">
                        <TextBlock Text="{Binding ToastMessage}" 
                                   Foreground="{Binding StatusColor}" 
                                   FontWeight="Bold" 
                                   FontSize="12"/>

                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>